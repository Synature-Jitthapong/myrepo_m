<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.syn.mpos"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:logo="@drawable/logo"
        android:theme="@style/AppBaseTheme" >
        <activity
            android:name="com.syn.mpos.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.syn.mpos.MainActivity"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.syn.mpos.DiscountActivity"
            android:label="@string/discount"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustPan" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.syn.pos.mobile.mpos.MainActivity" />
        </activity>
        <activity
            android:name="com.syn.mpos.PaymentActivity"
            android:label="@string/title_activity_payment"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.syn.mpos.CreditPayActivity"
            android:label="@string/title_activity_credit_pay"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Holo.Light.Dialog.NoActionBar" >
        </activity>
        <activity
            android:name="com.syn.mpos.SaleReportActivity"
            android:label="@string/title_activity_sale_report"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.syn.mpos.SettingsActivity"
            android:label="@string/title_activity_setting" >
        </activity>
        <activity
            android:name="com.syn.mpos.DirectReceiveActivity"
            android:label="@string/title_activity_inv_direct_receive" >
        </activity>
        <activity
            android:name="com.syn.mpos.StockCountActivity"
            android:label="@string/title_activity_stock_count"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.syn.mpos.VoidBillActivity"
            android:label="@string/title_activity_void_bill" >
        </activity>
        <activity
            android:name="com.syn.mpos.AddMemberActivity"
            android:label="@string/title_activity_add_member"
            android:theme="@android:style/Theme.Holo.Light.Dialog.NoActionBar"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.syn.mpos.AddProductActivity"
            android:label="@string/title_activity_add_product"
            android:theme="@android:style/Theme.Holo.Light.Dialog" >
        </activity>
        <activity
            android:name="com.syn.mpos.StockCardActivity"
            android:label="@string/title_activity_stock_card" >
        </activity>
    </application>

</manifest>