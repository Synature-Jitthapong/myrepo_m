<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.syn.mpos"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="17" />
    <supports-screens android:normalScreens="false" android:smallScreens="false" android:largeScreens="true"/>
    <uses-feature android:required="false" android:name="android.hardware.camera"/>
    <uses-feature android:required="false" android:name="android.hardware.camera.front"/>
    <uses-feature android:required="false" android:name="android.hardware.camera.flash"/>
    <uses-feature android:required="false" android:name="android.hardware.camera.autofocus"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:logo="@drawable/ic_launcher"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.syn.mpos.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.syn.mpos.MainActivity"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden">
        </activity>
        <activity
            android:name="com.syn.mpos.DiscountActivity"
            android:label="@string/discount"
            android:screenOrientation="landscape">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.syn.mpos.MainActivity" />
        </activity>
        <activity
            android:name="com.syn.mpos.PaymentActivity"
            android:label="@string/title_activity_payment"
            android:screenOrientation="landscape">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.syn.mpos.MainActivity" />
        </activity>
        <activity
            android:name="com.syn.mpos.CreditPayActivity"
            android:label="@string/title_activity_credit_pay"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.syn.mpos.SaleReportActivity"
            android:label="@string/title_activity_sale_report"
            android:screenOrientation="landscape">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.syn.mpos.MainActivity" />
        </activity>
        <activity
            android:name="com.syn.mpos.DirectReceiveActivity"
            android:label="@string/title_activity_inv_direct_receive"
            android:screenOrientation="landscape">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.syn.mpos.MainActivity" />
        </activity>
        <activity
            android:name="com.syn.mpos.StockCountActivity"
            android:label="@string/title_activity_stock_count"
            android:screenOrientation="landscape">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.syn.mpos.MainActivity" />
        </activity>
        <activity
            android:name="com.syn.mpos.VoidBillActivity"
            android:label="@string/title_activity_void_bill"
            android:screenOrientation="landscape">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.syn.mpos.MainActivity" />
        </activity>
        <activity
            android:name="com.syn.mpos.StockCardActivity"
            android:label="@string/title_activity_stock_card"
            android:screenOrientation="landscape">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.syn.mpos.MainActivity" />
        </activity>
        <activity
            android:name="com.syn.mpos.SettingActivity"
            android:label="@string/title_activity_setting" >
        </activity>
    </application>

</manifest>