<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="8dp" >

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:baselineAligned="true" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <EditText
                android:id="@+id/txtPaymentLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txtTotalPaid"
                android:layout_alignRight="@+id/txtTotalPaid"
                android:layout_below="@+id/txtTotalPaid"
                android:layout_weight="1"
                android:ems="5"
                android:enabled="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center_vertical"
                android:inputType="number"
                android:textAppearance="?android:attr/textAppearanceLargeInverse"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="32sp"
                android:textStyle="bold" >

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtTotalPrice"
                android:gravity="right"
                android:text="@string/total_price"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtTotalPaid"
                android:gravity="right"
                android:text="@string/total_payment"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtPaymentLeft"
                android:gravity="right"
                android:text="@string/to_be_paid"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="32sp" />

            <EditText
                android:id="@+id/txtTotalPaid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txtTotalPrice"
                android:layout_alignRight="@+id/txtTotalPrice"
                android:layout_below="@+id/txtTotalPrice"
                android:layout_weight="1"
                android:ems="5"
                android:enabled="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center_vertical"
                android:inputType="number"
                android:textAppearance="?android:attr/textAppearanceLargeInverse"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="32sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:ems="5"
                android:enabled="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center_vertical"
                android:inputType="numberSigned"
                android:textAppearance="?android:attr/textAppearanceLargeInverse"
                android:textColor="@android:color/black"
                android:textSize="48sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5" >

            <Button
                android:id="@+id/btnCreditPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:minHeight="100dp"
                android:minWidth="120dp"
                android:onClick="creditPayClicked"
                android:text="@string/credit_pay"
                android:textSize="32sp" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="bottom" >

        <TableLayout
            android:id="@+id/TableLayout2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_weight="1" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/txtEnterPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="5"
                    android:enabled="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="right|center_vertical"
                    android:inputType="number"
                    android:textAppearance="?android:attr/textAppearanceLargeInverse"
                    android:textColor="@android:color/black"
                    android:textSize="32sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/btnPay7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:minWidth="64dp"
                    android:onClick="onBtnPriceClick"
                    android:text="7"
                    android:textSize="48sp" />

                <Button
                    android:id="@+id/btnPay8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:minWidth="64dp"
                    android:onClick="onBtnPriceClick"
                    android:text="8"
                    android:textSize="48sp" />

                <Button
                    android:id="@+id/btnPay9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:minWidth="64dp"
                    android:onClick="onBtnPriceClick"
                    android:text="9"
                    android:textSize="48sp" />

                <Button
                    android:id="@+id/btnPayDel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:minWidth="64dp"
                    android:onClick="onBtnPriceClick"
                    android:text="&lt;&lt;"
                    android:textSize="48sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/btnPay4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:minWidth="64dp"
                    android:onClick="onBtnPriceClick"
                    android:text="4"
                    android:textSize="48sp" />

                <Button
                    android:id="@+id/btnPay5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:minWidth="64dp"
                    android:onClick="onBtnPriceClick"
                    android:text="5"
                    android:textSize="48sp" />

                <Button
                    android:id="@+id/btnPay6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:minWidth="64dp"
                    android:onClick="onBtnPriceClick"
                    android:text="6"
                    android:textSize="48sp" />

                <Button
                    android:id="@+id/btnPayC"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:minWidth="64dp"
                    android:onClick="onBtnPriceClick"
                    android:text="C"
                    android:textSize="48sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/btnPay1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:minWidth="64dp"
                    android:onClick="onBtnPriceClick"
                    android:text="1"
                    android:textSize="48sp" />

                <Button
                    android:id="@+id/btnPay2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:minWidth="64dp"
                    android:onClick="onBtnPriceClick"
                    android:text="2"
                    android:textSize="48sp" />

                <Button
                    android:id="@+id/btnPay3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:minWidth="64dp"
                    android:onClick="onBtnPriceClick"
                    android:text="3"
                    android:textSize="48sp" />

                <Button
                    android:id="@+id/btnPayDot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:minWidth="64dp"
                    android:onClick="onBtnPriceClick"
                    android:text="."
                    android:textSize="48sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/btnPay0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:minWidth="64dp"
                    android:onClick="onBtnPriceClick"
                    android:text="0"
                    android:textSize="48sp" />

                <Button
                    android:id="@+id/btnPayEnter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:minWidth="64dp"
                    android:onClick="onBtnPriceClick"
                    android:text="@string/enter"
                    android:textSize="48sp" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:id="@+id/TableLayout3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TableRow
                android:id="@+id/tableRow7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/btnPay1000"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="100dp"
                    android:minWidth="120dip"
                    android:onClick="onBtnPriceClick"
                    android:text="1000"
                    android:textSize="48sp" />

                <Button
                    android:id="@+id/btnPay50"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="100dp"
                    android:minWidth="120dip"
                    android:onClick="onBtnPriceClick"
                    android:text="50"
                    android:textSize="48sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/btnPay500"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="100dp"
                    android:minWidth="120dip"
                    android:onClick="onBtnPriceClick"
                    android:text="500"
                    android:textSize="48sp" />

                <Button
                    android:id="@+id/btnPay20"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="100dp"
                    android:minWidth="120dip"
                    android:onClick="onBtnPriceClick"
                    android:text="20"
                    android:textSize="48sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/btnPay100"
                    style="@style/AppBaseTheme"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="100dp"
                    android:minWidth="120dip"
                    android:onClick="onBtnPriceClick"
                    android:text="100"
                    android:textSize="48sp" />

                <Button
                    android:id="@+id/Button01"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:editable="false"
                    android:minHeight="100dp"
                    android:minWidth="120dip"
                    android:onClick="onBtnPriceClick"
                    android:textSize="48sp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</LinearLayout>