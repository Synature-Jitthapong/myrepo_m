<resources xmlns:android="http://schemas.android.com/apk/res/android">
 	<style name="BaseBodyText" parent="android:Widget.Holo.TextView">
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:lines">1</item>
		<item name="android:shadowRadius">1.0</item>
		<item name="android:padding">4dp</item>
		<item name="android:gravity">right</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
    </style>
    <style name="BaseHeaderText" parent="BaseBodyText">
		<item name="android:textColor">@color/blue_green</item>
		<item name="android:shadowColor">@color/text_shadow</item>
		<item name="android:padding">4dp</item>
		<item name="android:gravity">center</item>
		<item name="android:textStyle">bold</item>
    </style>
    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="BaseActivityDialogTheme" parent="android:Theme.Holo.Light.Dialog">
        
    </style>
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!-- API 11 theme customizations can go here. -->
    </style>

</resources>
