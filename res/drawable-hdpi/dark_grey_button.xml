<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid 
                android:color="#949494" />

            <stroke 
                android:width="1dp" 
                android:color="#6E6E6E" />

            <padding 
                android:bottom="4dp" 
                android:left="0dp" 
                android:right="2dp" 
                android:top="4dp" />
        </shape>
        
        </item>
    <item>
        <shape>
            <gradient 
                android:angle="270" 
                android:endColor="#747474" 
                android:startColor="#949494">
                
            </gradient>

            <stroke 
                android:width="1dp" 
                android:color="#6E6E6E" />

            <padding 
                android:bottom="4dp" 
                android:left="0dp" 
                android:right="2dp" 
                android:top="4dp" />
        </shape></item>

</selector>