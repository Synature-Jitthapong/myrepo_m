<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid 
                android:color="#FF9000" />
            <stroke 
                android:width="1dp" 
                android:color="#F4B933" />
            <padding 
                android:bottom="10dp"
                android:left="10dp" 
                android:right="10dp" 
                android:top="10dp" />
        </shape>
        </item>
    <item 
        android:state_selected="true">
        <shape>
            <solid 
                android:color="#FF9000" />
            <stroke 
                android:width="1dp" 
                android:color="#F4B933" />
            <padding 
                android:bottom="10dp" 
                android:left="10dp" 
                android:right="10dp" 
                android:top="10dp" />
        </shape>
    </item>
     <item 
        android:state_activated="true">
        <shape>
            <solid 
                android:color="#FF9000" />
            <stroke 
                android:width="1dp" 
                android:color="#F4B933" />
            <padding 
                android:bottom="10dp" 
                android:left="10dp" 
                android:right="10dp" 
                android:top="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient 
                android:angle="270" 
                android:endColor="#F19D18" 
                android:startColor="#FFD823" />
            <stroke 
                android:width="1dp" 
                android:color="#F4B933" />
            <padding 
                android:bottom="10dp" 
                android:left="10dp" 
                android:right="10dp" 
                android:top="10dp" />
        </shape></item>

</selector>