<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#1FDF22" />
      <stroke
          android:width="1dp"
          android:color="#24DF27" />
      <corners
          android:radius="5dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
  <item android:state_selected="true" >
    <shape>
      <solid
          android:color="#1FDF22" />
      <stroke
          android:width="1dp"
          android:color="#24DF27" />
      <corners
          android:radius="5dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
  <item android:state_enabled="false">
    <shape>
      <solid
          android:color="#D3D3D3" />
      <stroke
          android:width="1dp"
          android:color="#B0B0B0" />
      <corners
          android:radius="5dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#1FDF22"
          android:endColor="#239730"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#24DF27" />
      <corners
          android:radius="5dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>

</selector>