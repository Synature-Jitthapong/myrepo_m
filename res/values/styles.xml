<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="ActivityDialogTheme" parent="BaseActivityDialogTheme">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:buttonStyle">@style/GrayButton</item>
    </style>
    <style name="HeaderRow">
        <item name="android:divider">@android:drawable/divider_horizontal_bright</item>
        <item name="android:showDividers">middle|beginning|end</item>
    </style>
 	<style name="BodyText" parent="@android:style/TextAppearance.Holo">
		<item name="android:gravity">right|center_vertical</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:padding">@dimen/default_margin</item>
    </style>
    <style name="HeaderText" parent="@android:style/TextAppearance.Holo">
		<item name="android:textAllCaps">true</item>
		<item name="android:padding">@dimen/default_margin</item>
    </style>
    <style name="RedButton" parent="@android:style/Widget.Holo.Button">
        <item name="android:background">@drawable/btn_holo_red</item>
    </style>
    <style name="GreenButton" parent="@android:style/Widget.Holo.Button">
        <item name="android:background">@drawable/btn_holo_green</item>
    </style>
    <style name="BlueButton" parent="@android:style/Widget.Holo.Button">
        <item name="android:background">@drawable/btn_holo_blue</item>
    </style>
    <style name="GrayButton" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:background">@drawable/btn_holo_gray</item>
    </style>
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:buttonStyle">@style/GrayButton</item>
        <item name="android:imageButtonStyle">@style/GrayButton</item>
        <item name="android:textColor">@color/dark_gray_text</item>
    </style>
</resources>