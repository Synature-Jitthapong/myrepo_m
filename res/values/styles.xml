<resources xmlns:android="http://schemas.android.com/apk/res/android">
     <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="ColumnDetail" parent="android:style/Widget.TextView">
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:lines">1</item>
    </style>
    <style name="ColumnHeader" parent="android:style/Widget.TextView">
        <item name="android:background">@color/grey_light</item>
        <item name="android:padding">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">1dp</item>
		<item name="android:lines">1</item>
    </style>
    <style name="CustomDialog" parent="android:Theme.Holo.Light.Dialog.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColor">#FF000000</item>
    </style>
    <style name="AppBaseThemeNoAction" parent="AppBaseTheme">
        <item name="android:windowActionBar">false</item>
	    <item name="android:windowNoTitle">true</item>
    </style>
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
	    
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
</resources>