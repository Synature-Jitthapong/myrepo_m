<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- AppTheme -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!--<item name="android:actionBarStyle">@style/MyActionBar</item>-->
        <item name="android:buttonStyle">@style/GrayButton</item>
        <item name="android:imageButtonStyle">@style/GrayButton</item>
        <item name="android:textColor">@color/dark_gray_text</item>
    </style>
    <!-- ActivityDialogTheme -->
    <style name="ActivityDialogTheme" parent="BaseActivityDialogTheme">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:buttonStyle">@style/GrayButton</item>
    </style>
    <!-- ActionBar styles -->
    <style name="MyActionBar"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@color/blue_green_light</item>
    </style>
    <!-- Text Qty -->
    <style name="TextQty" parent="@android:style/TextAppearance.Holo.Medium">
        <item name="android:background">@drawable/white_flat_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:padding">@dimen/default_margin</item>
    </style>
    <!-- Row Style -->
    <style name="HeaderRow">
        <item name="android:divider">@android:drawable/divider_horizontal_bright</item>
        <item name="android:showDividers">middle|beginning|end</item>
    </style>
    <!-- Text Style -->
 	<style name="BodyText" parent="@android:style/TextAppearance.Holo">
		<item name="android:gravity">right|center_vertical</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingLeft">2dp</item>
		<item name="android:paddingTop">@dimen/default_margin</item>
		<item name="android:paddingRight">2dp</item>
		<item name="android:paddingBottom">@dimen/default_margin</item>
    </style>
    <style name="SummaryText" parent="HeaderText">
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/blue_gray_light</item>
    </style>
    <style name="HeaderText" parent="@android:style/TextAppearance.Holo">
		<item name="android:textAllCaps">true</item>
		<item name="android:padding">@dimen/default_margin</item>
    </style>
    <!-- Button Style -->
    <style name="RedButton" parent="BaseButton.Light">
        <item name="android:background">@drawable/btn_holo_red</item>
    </style>
    <style name="SmoothGreenButton" parent="BaseButton.Light">
        <item name="android:background">@drawable/btn_smooth_green</item>
    </style>
    <style name="BlueButton" parent="BaseButton.Light">
        <item name="android:background">@drawable/btn_holo_blue</item>
    </style>
    <style name="BlueGrayButton" parent="BaseButton">
        <item name="android:background">@drawable/btn_blue_gray_light</item>
    </style>
    <style name="GrayButton" parent="BaseButton">
        <item name="android:background">@drawable/btn_holo_gray</item>
    </style>
    <style name="BaseButton.Light" parent="BaseButton">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="BaseButton" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:textAllCaps">true</item>
    </style>
</resources>