<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="SectionHead" parent="android:Widget.Holo.Light.TextView">
        <item name="android:drawableBottom">@drawable/section_head</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textColor">@android:color/holo_blue_light</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="EditText" parent="@android:style/Widget.EditText">
        <item name="android:layout_margin">4dp</item>
    </style>
    <style name="ButtonTextWhite" parent="ButtonText">
	    <item name="android:textColor" >#ffffff</item>
    </style>
    <style name="ButtonText">
        <item name="android:layout_width" >wrap_content</item>
	    <item name="android:layout_height" >wrap_content</item>
	    <item name="android:gravity" >center</item>
	    <item name="android:textStyle">normal</item>
	    <item name="android:layout_margin" >2dp</item>
	    <item name="android:minHeight">48dip</item>
	    <item name="android:minWidth">64dip</item>
    </style>
    <style name="ColumnDetail" parent="android:style/Widget.TextView">
        <item name="android:padding">4dp</item>
        <item name="android:lines">1</item>
    </style>
    <style name="ColumnHeader" parent="android:style/Widget.TextView">
        <item name="android:background">@color/light_gray</item>
        <item name="android:padding">4dp</item>
        <item name="android:gravity">right</item>
		<item name="android:lines">1</item>
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- <item name="android:actionBarStyle">@style/ActionBarStyle</item> -->
    </style>  
     <style name="ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#FF3F9FE0</item>
    </style>
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
    </style>
</resources>