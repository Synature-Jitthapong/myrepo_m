<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="8dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="bottom" >

        <TableLayout
            android:id="@+id/TableLayout2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/LinearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right" >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/total_price"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <EditText
                    android:id="@+id/txtTotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="5"
                    android:enabled="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center_vertical"
                    android:inputType="numberSigned"
                    android:textAppearance="?android:attr/textAppearanceLargeInverse"
                    android:textColor="@android:color/black"
                    android:textSize="32sp"
                    android:textStyle="bold" >

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right" >

                <EditText
                    android:id="@+id/txtEnterPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="5"
                    android:enabled="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="right|center_vertical"
                    android:inputType="number"
                    android:textAppearance="?android:attr/textAppearanceLargeInverse"
                    android:textColor="@android:color/black"
                    android:textSize="32sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/btnPay7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:minWidth="64dp"
                    android:onClick="onBtnPriceClick"
                    android:text="7"
                    android:textSize="32sp" />

                <Button
                    android:id="@+id/btnPay8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:minWidth="64dp"
                    android:onClick="onBtnPriceClick"
                    android:text="8"
                    android:textSize="32sp" />

                <Button
                    android:id="@+id/btnPay9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:minWidth="64dp"
                    android:onClick="onBtnPriceClick"
                    android:text="9"
                    android:textSize="32sp" />

                <Button
                    android:id="@+id/btnPayDel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:minWidth="64dp"
                    android:onClick="onBtnPriceClick"
                    android:text="&lt;&lt;"
                    android:textSize="32sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/btnPay4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:minWidth="64dp"
                    android:onClick="onBtnPriceClick"
                    android:text="4"
                    android:textSize="32sp" />

                <Button
                    android:id="@+id/btnPay5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:minWidth="64dp"
                    android:onClick="onBtnPriceClick"
                    android:text="5"
                    android:textSize="32sp" />

                <Button
                    android:id="@+id/btnPay6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:minWidth="64dp"
                    android:onClick="onBtnPriceClick"
                    android:text="6"
                    android:textSize="32sp" />

                <Button
                    android:id="@+id/btnPayC"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:minWidth="64dp"
                    android:onClick="onBtnPriceClick"
                    android:text="C"
                    android:textSize="32sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/btnPay1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:minWidth="64dp"
                    android:onClick="onBtnPriceClick"
                    android:text="1"
                    android:textSize="32sp" />

                <Button
                    android:id="@+id/btnPay2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:minWidth="64dp"
                    android:onClick="onBtnPriceClick"
                    android:text="2"
                    android:textSize="32sp" />

                <Button
                    android:id="@+id/btnPay3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:minWidth="64dp"
                    android:onClick="onBtnPriceClick"
                    android:text="3"
                    android:textSize="32sp" />

                <Button
                    android:id="@+id/btnPayDot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:minWidth="64dp"
                    android:onClick="onBtnPriceClick"
                    android:text="."
                    android:textSize="32sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/btnPay0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:minWidth="64dp"
                    android:onClick="onBtnPriceClick"
                    android:text="0"
                    android:textSize="32sp" />

                <Button
                    android:id="@+id/btnPayEnter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:minWidth="64dp"
                    android:onClick="onBtnPriceClick"
                    android:text="@string/enter"
                    android:textSize="32sp" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:id="@+id/TableLayout3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TableRow
                android:id="@+id/tableRow7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/btnPay1000"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="100dp"
                    android:minWidth="100dp"
                    android:onClick="onBtnPriceClick"
                    android:text="1000"
                    android:textSize="32sp" />

                <Button
                    android:id="@+id/btnPay50"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="100dp"
                    android:minWidth="100dp"
                    android:onClick="onBtnPriceClick"
                    android:text="50"
                    android:textSize="32sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/btnPay500"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="100dp"
                    android:minWidth="100dp"
                    android:onClick="onBtnPriceClick"
                    android:text="500"
                    android:textSize="32sp" />

                <Button
                    android:id="@+id/btnPay20"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="100dp"
                    android:minWidth="100dp"
                    android:onClick="onBtnPriceClick"
                    android:text="20"
                    android:textSize="32sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/btnPay100"
                    style="@style/AppBaseTheme"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="100dp"
                    android:minWidth="100dp"
                    android:onClick="onBtnPriceClick"
                    android:text="100"
                    android:textSize="32sp" />

                <Button
                    android:id="@+id/Button01"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:editable="false"
                    android:minHeight="100dp"
                    android:minWidth="100dp"
                    android:onClick="onBtnPriceClick"
                    android:textSize="32sp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</LinearLayout>