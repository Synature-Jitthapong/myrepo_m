<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CreditPayActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtCardTotalPrice"
                android:layout_toLeftOf="@+id/txtCardTotalPrice"
                android:gravity="right"
                android:text="@string/total_price"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/txtCardTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/black"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtCardPayAmount"
                android:layout_toLeftOf="@+id/txtCardPayAmount"
                android:gravity="right"
                android:text="@string/pay_amount"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/txtCardPayAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txtCardTotalPrice"
                android:layout_alignRight="@+id/txtCardTotalPrice"
                android:layout_below="@+id/txtCardTotalPrice"
                android:ems="10"
                android:gravity="center_vertical"
                android:inputType="numberSigned|numberDecimal"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/black"
                android:textSize="32sp"
                android:textStyle="bold" >

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/layoutCardNo"
                android:layout_alignBottom="@+id/layoutCardNo"
                android:layout_alignTop="@+id/layoutCardNo"
                android:layout_below="@+id/txtCardPayAmount"
                android:layout_toLeftOf="@+id/layoutCardNo"
                android:gravity="right|center_vertical"
                android:text="@string/credit_card_no"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <LinearLayout
                android:id="@+id/layoutCardNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txtCardTotalPrice"
                android:layout_alignRight="@+id/txtCardTotalPrice"
                android:layout_below="@+id/txtCardPayAmount" >

                <EditText
                    android:id="@+id/txtCardNoSeq1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="4"
                    android:inputType="number"
                    android:lines="1"
                    android:maxLength="4"
                    android:textSize="32sp" />

                <EditText
                    android:id="@+id/txtCardNoSeq2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="4"
                    android:inputType="number"
                    android:lines="1"
                    android:maxLength="4"
                    android:textSize="32sp" />

                <EditText
                    android:id="@+id/txtCardNoSeq3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="4"
                    android:inputType="number"
                    android:lines="1"
                    android:maxLength="4"
                    android:textSize="32sp" />

                <EditText
                    android:id="@+id/txtCardNoSeq4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="4"
                    android:inputType="number"
                    android:lines="1"
                    android:maxLength="4"
                    android:textSize="32sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtCvv2"
                android:layout_toLeftOf="@+id/txtCvv2"
                android:gravity="right"
                android:text="@string/cvv2"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/txtCvv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txtCardTotalPrice"
                android:layout_below="@+id/layoutCardNo"
                android:ems="3"
                android:maxLength="3"
                android:inputType="numberPassword"
                android:lines="1"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/spCardType"
                android:layout_alignBottom="@+id/spCardType"
                android:layout_alignTop="@+id/spCardType"
                android:layout_below="@+id/layoutCardNo"
                android:layout_toLeftOf="@+id/spCardType"
                android:gravity="right|center_vertical"
                android:text="@string/card_type"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Spinner
                android:id="@+id/spCardType"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txtCardTotalPrice"
                android:layout_alignRight="@+id/txtCardTotalPrice"
                android:layout_below="@+id/txtCvv2" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/spBank"
                android:layout_alignBottom="@+id/spBank"
                android:layout_alignTop="@+id/spBank"
                android:layout_below="@+id/spCardType"
                android:layout_toLeftOf="@+id/spBank"
                android:gravity="right|center_vertical"
                android:text="@string/bank"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Spinner
                android:id="@+id/spBank"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txtCardTotalPrice"
                android:layout_alignRight="@+id/txtCardTotalPrice"
                android:layout_below="@+id/spCardType" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/layoutExpDate"
                android:layout_alignBottom="@+id/layoutExpDate"
                android:layout_alignTop="@+id/layoutExpDate"
                android:layout_below="@+id/spBank"
                android:layout_toLeftOf="@+id/layoutExpDate"
                android:gravity="right|center_vertical"
                android:text="@string/expire_date"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <LinearLayout
                android:id="@+id/layoutExpDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txtCardTotalPrice"
                android:layout_alignRight="@+id/txtCardTotalPrice"
                android:layout_below="@+id/spBank"
                android:gravity="center_vertical" >

                <Spinner
                    android:id="@+id/spExpMonth"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <Spinner
                    android:id="@+id/spExpYear"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </RelativeLayout>

    </ScrollView>

</LinearLayout>