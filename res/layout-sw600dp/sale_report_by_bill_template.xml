<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector" >

    <TextView
        android:id="@+id/tvReceipt"
        style="@style/ColumnDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="marquee"
        android:fadingEdge="horizontal"
        android:gravity="left"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true" />

    <TextView
        android:id="@+id/tvTotalPrice"
        style="@style/ColumnDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:gravity="right" />

    <TextView
        android:id="@+id/tvTotalDisc"
        style="@style/ColumnDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:gravity="right" />

    <TextView
        android:id="@+id/tvSubTotal"
        style="@style/ColumnDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:gravity="right" />

    <TextView
        android:id="@+id/tvTotalSale"
        style="@style/ColumnDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:gravity="right"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvVatable"
        style="@style/ColumnDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:gravity="right" />

    <TextView
        android:id="@+id/tvTotalVat"
        style="@style/ColumnDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:gravity="right" />

    <TextView
        android:id="@+id/tvPayTypeCash"
        style="@style/ColumnDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8" />

    <TextView
        android:id="@+id/tvPayTypeCredit"
        style="@style/ColumnDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8" />

    <TextView
        android:id="@+id/tvTotalPayment"
        style="@style/ColumnDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8" />

</LinearLayout>