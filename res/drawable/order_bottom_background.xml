<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape>
            <solid 
                android:color="@color/light_grey"/>
            <corners
                android:bottomLeftRadius="@dimen/medium_radius"
                android:bottomRightRadius="@dimen/medium_radius"></corners>
        </shape>
    </item>
    <item
        android:left="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape>
            <solid 
                android:color="@color/smoke_white"/>
            <corners
                android:bottomLeftRadius="@dimen/medium_radius"
                android:bottomRightRadius="@dimen/medium_radius"></corners>
        </shape>
    </item>

</layer-list>
