<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape>
            <solid 
                android:color="@color/dark_grey"/>
            <corners
                android:radius="@dimen/medium_radius"></corners>
        </shape>
    </item>
    <item
        android:bottom="1dp">
        <shape>
            <solid 
                android:color="@color/smoke_white"/>
            <corners
                android:radius="@dimen/medium_radius"></corners>
            <stroke
                android:color="@color/light_grey"
                android:width="1dp">
            </stroke>
        </shape>
    </item>

</layer-list>
