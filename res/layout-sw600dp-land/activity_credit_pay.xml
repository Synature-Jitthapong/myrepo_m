<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CreditPayActivity" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editTextCreditTotalPrice"
        android:layout_alignBottom="@+id/editTextCreditTotalPrice"
        android:layout_alignParentLeft="true"
        android:gravity="right"
        android:text="@string/total_price"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editTextCreditPayAmount"
        android:layout_alignBottom="@+id/editTextCreditPayAmount"
        android:layout_alignParentLeft="true"
        android:gravity="right"
        android:text="@string/pay_amount"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/editTextCreditTotalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView4"
        android:ems="10"
        android:enabled="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black"
        android:textSize="32sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextCreditNo"
        style="@style/EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextCreditPayAmount"
        android:layout_toRightOf="@+id/textView4"
        android:background="@drawable/edittext_selector"
        android:ems="10"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editTextCreditNo"
        android:layout_alignBottom="@+id/editTextCreditNo"
        android:layout_alignParentLeft="true"
        android:gravity="right"
        android:text="@string/credit_card_no"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btnPopCardExp"
        style="?android:attr/spinnerStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_toRightOf="@+id/textView4"
        android:onClick="cardExpClicked"
        android:text="@string/expire_date" />

    <Spinner
        android:id="@+id/spinnerCardType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/spinnerBank"
        android:layout_below="@+id/spinnerBank"
        android:layout_toRightOf="@+id/textView4" />

    <Spinner
        android:id="@+id/spinnerBank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/editTextCreditNo"
        android:layout_below="@+id/editTextCreditNo"
        android:layout_toRightOf="@+id/textView4" />

    <EditText
        android:id="@+id/editTextCreditPayAmount"
        style="@style/EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextCreditTotalPrice"
        android:layout_toRightOf="@+id/textView4"
        android:background="@drawable/edittext_selector"
        android:ems="10"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black"
        android:textSize="32sp"
        android:textStyle="bold" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/spinnerCardType"
        android:gravity="right"
        android:text="@string/expire_date"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignTop="@+id/spinnerBank"
        android:layout_marginTop="16dp"
        android:gravity="right"
        android:text="@string/bank"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignTop="@+id/spinnerCardType"
        android:layout_marginTop="16dp"
        android:gravity="right"
        android:text="@string/card_type"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>