<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PaymentActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_light"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/title_activity_payment"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="32sp" />

        <Button
            android:id="@+id/buttonCancelPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="100dp"
            android:onClick="onCancelClicked"
            android:text="@android:string/cancel" />

        <Button
            android:id="@+id/buttonOkPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="100dp"
            android:onClick="onOkClicked"
            android:text="@android:string/ok" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/smoke_white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="4dp" >

                <Button
                    android:id="@+id/btnCreditPay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="creditPayClicked"
                    android:text="@string/credit_pay" />

            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right" >

            <TextView
                android:id="@+id/textViewTotalPayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="32sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TableRow
                    android:id="@+id/tableRow11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:layout_marginRight="1dp"
                        android:background="@color/grey_light"
                        android:padding="4dp"
                        android:text="@string/pay_type"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:background="@color/grey_light"
                        android:padding="4dp"
                        android:text="@string/pay_detail"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:background="@color/grey_light"
                        android:padding="4dp"
                        android:text="@string/pay_amount"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                </TableRow>

            </TableLayout>

            <ScrollView
                android:id="@+id/scrollView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TableLayout
                    android:id="@+id/tableLayoutPaydetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >
                </TableLayout>

            </ScrollView>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey_light" >

                <TableRow
                    android:id="@+id/tableRow12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:gravity="right"
                        android:text="@string/total_payment"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <EditText
                        android:id="@+id/editTextTotalPaid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:enabled="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="number"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:gravity="right"
                        android:text="@string/to_be_paid"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <EditText
                        android:id="@+id/editTextTobePaid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:enabled="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="number"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                </TableRow>
            </TableLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/grey_light"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:orientation="vertical" >

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp" >

                    <TableRow
                        android:id="@+id/tableRow1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:gravity="right"
                            android:text="@string/total_receive"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                        <EditText
                            android:id="@+id/editTextTotalPay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:enabled="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:inputType="number"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" >

                            <requestFocus />
                        </EditText>
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:gravity="right"
                            android:text="@string/change"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                        <EditText
                            android:id="@+id/editTextChange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:enabled="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:inputType="number"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                    </TableRow>
                </TableLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <TableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp" >

                        <TableRow
                            android:id="@+id/tableRow3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >

                            <Button
                                android:id="@+id/btnPay7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="64dp"
                                android:onClick="onBtnPriceClick"
                                android:text="7"
                                android:textSize="32sp" />

                            <Button
                                android:id="@+id/btnPay8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="64dp"
                                android:onClick="onBtnPriceClick"
                                android:text="8"
                                android:textSize="32sp" />

                            <Button
                                android:id="@+id/btnPay9"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="64dp"
                                android:onClick="onBtnPriceClick"
                                android:text="9"
                                android:textSize="32sp" />

                            <Button
                                android:id="@+id/btnPayDel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="64dp"
                                android:onClick="onBtnPriceClick"
                                android:text="&lt;&lt;"
                                android:textSize="32sp" />

                        </TableRow>

                        <TableRow
                            android:id="@+id/tableRow4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >

                            <Button
                                android:id="@+id/btnPay4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="64dp"
                                android:onClick="onBtnPriceClick"
                                android:text="4"
                                android:textSize="32sp" />

                            <Button
                                android:id="@+id/btnPay5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="64dp"
                                android:onClick="onBtnPriceClick"
                                android:text="5"
                                android:textSize="32sp" />

                            <Button
                                android:id="@+id/btnPay6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="64dp"
                                android:onClick="onBtnPriceClick"
                                android:text="6"
                                android:textSize="32sp" />

                            <Button
                                android:id="@+id/btnPayC"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="64dp"
                                android:onClick="onBtnPriceClick"
                                android:text="C"
                                android:textSize="32sp" />

                        </TableRow>

                        <TableRow
                            android:id="@+id/tableRow5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >

                            <Button
                                android:id="@+id/btnPay1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="64dp"
                                android:onClick="onBtnPriceClick"
                                android:text="1"
                                android:textSize="32sp" />

                            <Button
                                android:id="@+id/btnPay2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="64dp"
                                android:onClick="onBtnPriceClick"
                                android:text="2"
                                android:textSize="32sp" />

                            <Button
                                android:id="@+id/btnPay3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="64dp"
                                android:onClick="onBtnPriceClick"
                                android:text="3"
                                android:textSize="32sp" />

                            <Button
                                android:id="@+id/btnPayDot"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="64dp"
                                android:onClick="onBtnPriceClick"
                                android:text="."
                                android:textSize="32sp" />

                        </TableRow>

                        <TableRow
                            android:id="@+id/tableRow6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >

                            <Button
                                android:id="@+id/btnPay0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="64dp"
                                android:onClick="onBtnPriceClick"
                                android:text="0"
                                android:textSize="32sp" />

                            <Button
                                android:id="@+id/btnPayEnter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_span="3"
                                android:minWidth="64dp"
                                android:onClick="onBtnPriceClick"
                                android:text="Enter"
                                android:textSize="32sp" />

                        </TableRow>
                    </TableLayout>

                    <TableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TableRow
                            android:id="@+id/tableRow7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >

                            <ImageButton
                                android:id="@+id/btnPay1000"
                                android:layout_width="120dp"
                                android:layout_height="64dp"
                                android:minHeight="64dp"
                                android:minWidth="120dp"
                                android:onClick="onBtnPriceClick"
                                android:padding="1dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/money1000" />

                            <ImageButton
                                android:id="@+id/btnPay50"
                                android:layout_width="120dp"
                                android:layout_height="64dp"
                                android:minHeight="64dp"
                                android:minWidth="120dp"
                                android:onClick="onBtnPriceClick"
                                android:padding="1dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/money50" />

                        </TableRow>

                        <TableRow
                            android:id="@+id/tableRow8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >

                            <ImageButton
                                android:id="@+id/btnPay500"
                                android:layout_width="120dp"
                                android:layout_height="64dp"
                                android:minHeight="64dp"
                                android:minWidth="120dp"
                                android:onClick="onBtnPriceClick"
                                android:padding="1dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/money500" />

                            <ImageButton
                                android:id="@+id/btnPay20"
                                android:layout_width="120dp"
                                android:layout_height="64dp"
                                android:minHeight="64dp"
                                android:minWidth="120dp"
                                android:onClick="onBtnPriceClick"
                                android:padding="1dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/money20" />

                        </TableRow>

                        <TableRow
                            android:id="@+id/tableRow9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >

                            <ImageButton
                                android:id="@+id/btnPay100"
                                android:layout_width="120dp"
                                android:layout_height="64dp"
                                android:minHeight="64dp"
                                android:minWidth="120dp"
                                android:onClick="onBtnPriceClick"
                                android:padding="1dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/money100" />

                            <ImageButton
                                android:id="@+id/imageButton6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minHeight="64dp"
                                android:minWidth="120dp"
                                android:onClick="onBtnPriceClick" />

                        </TableRow>

                        <TableRow
                            android:id="@+id/tableRow10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >
                        </TableRow>
                    </TableLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
