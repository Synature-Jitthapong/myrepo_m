<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textViewHoldTitle"
        style="@style/GeneraldWhiteText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_hold_order"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textViewOrderNo"
        style="@style/GeneraldWhiteText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_hold_order_remark"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/editTextRemark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/radius_bg"
        android:ems="15"
        android:gravity="top|left"
        android:inputType="textMultiLine"
        android:lines="3" >

        <requestFocus />
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <Button
            android:id="@+id/buttonCancelHold"
            style="@style/GeneraldButtonTextNoMargin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/grey_button_left"
            android:text="@string/button_cancel_hold"
            android:textStyle="normal" />

        <Button
            android:id="@+id/buttonConfirmHold"
            style="@style/GeneraldButtonTextNoMargin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/grey_button_right"
            android:text="@string/button_confirm_hold"
            android:textStyle="normal" />

    </LinearLayout>

</LinearLayout>