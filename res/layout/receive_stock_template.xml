<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tvNo"
        style="@style/ColumnDetail"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tvCode"
        style="@style/ColumnDetail"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvName"
            style="@style/ColumnDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imgDel"
        style="@style/ColumnDetail"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_delete" />

    <EditText
        android:id="@+id/txtQty"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="1dp"
        android:ems="10"
        android:gravity="center_vertical|right"
        android:inputType="number|numberSigned|numberDecimal"
        android:lines="1"
        android:singleLine="true" >

    </EditText>

    <EditText
        android:id="@+id/txtPrice"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="1dp"
        android:ems="10"
        android:gravity="center_vertical|right"
        android:inputType="number|numberSigned|numberDecimal"
        android:lines="1"
        android:singleLine="true" />

    <RadioGroup
        android:id="@+id/rdoTaxType"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:visibility="gone" >

        <RadioButton
            android:id="@+id/rdoNoVat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/no_vat" />

        <RadioButton
            android:id="@+id/rdoIncludeVat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vat_include" />

        <RadioButton
            android:id="@+id/rdoExcludeVat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vat_exclude" />

    </RadioGroup>

</LinearLayout>
