<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp" >

    <TextView
        android:id="@+id/textView1"
        style="@style/SectionHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bill_utility"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp" >

        <Button
            android:id="@+id/btnVoidBill"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_button"
            android:text="@string/void_bill" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        style="@style/SectionHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/session_utility"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp" >

        <Button
            android:id="@+id/btnCloseShift"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_button"
            android:text="@string/close_shift" />

        <Button
            android:id="@+id/btnEndday"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_button"
            android:text="@string/endday" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        style="@style/SectionHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sync_utility"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp" >

        <Button
            android:id="@+id/btnSync"
            style="@style/ButtonTextWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/green_button"
            android:text="@string/sync" />

    </LinearLayout>

</LinearLayout>
