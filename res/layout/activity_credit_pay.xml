<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CreditPayActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/title_activity_credit_pay"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="48sp" />

        <Button
            android:id="@+id/btnCreditPayCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="100dp"
            android:onClick="cancelPayClicked"
            android:text="@string/button_cancel" />

        <Button
            android:id="@+id/btnCreditPayOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="100dp"
            android:onClick="okPayClicked"
            android:text="@string/button_ok" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/grey_light"
        android:padding="8dp" >

        <TableLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:gravity="right"
                    android:text="@string/total_price"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <EditText
                    android:id="@+id/editTextCreditTotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:enabled="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:gravity="right"
                    android:text="@string/pay_amount"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <EditText
                    android:id="@+id/editTextCreditPayAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:enabled="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:gravity="right"
                    android:text="@string/credit_card_no"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <EditText
                    android:id="@+id/editTextCreditNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:enabled="true"
                    android:focusable="false"
                    android:focusableInTouchMode="false" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:gravity="right"
                    android:text="@string/bank"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <Spinner
                    android:id="@+id/spinnerBank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:gravity="right"
                    android:text="@string/card_type"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <Spinner
                    android:id="@+id/spinnerCardType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:gravity="right"
                    android:text="@string/expire_date"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <Spinner
                    android:id="@+id/spinnerExpMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Spinner
                    android:id="@+id/spinnerExpYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp" >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TableRow
                    android:id="@+id/tableRow7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center" >

                    <Button
                        android:id="@+id/btnCredit7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="64dp"
                        android:text="7"
                        android:textSize="32sp" />

                    <Button
                        android:id="@+id/btnCredit8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="64dp"
                        android:text="8"
                        android:textSize="32sp" />

                    <Button
                        android:id="@+id/btnCredit9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="64dp"
                        android:text="9"
                        android:textSize="32sp" />

                    <Button
                        android:id="@+id/btnCreditDel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="64dp"
                        android:text="&lt;&lt;"
                        android:textSize="32sp" />

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center" >

                    <Button
                        android:id="@+id/btnCredit4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="64dp"
                        android:text="4"
                        android:textSize="32sp" />

                    <Button
                        android:id="@+id/btnCredit5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="64dp"
                        android:text="5"
                        android:textSize="32sp" />

                    <Button
                        android:id="@+id/btnCredit6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="64dp"
                        android:text="6"
                        android:textSize="32sp" />

                    <Button
                        android:id="@+id/btnCreditC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="64dp"
                        android:text="C"
                        android:textSize="32sp" />

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center" >

                    <Button
                        android:id="@+id/btnCredit1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="64dp"
                        android:text="1"
                        android:textSize="32sp" />

                    <Button
                        android:id="@+id/btnCredit2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="64dp"
                        android:text="2"
                        android:textSize="32sp" />

                    <Button
                        android:id="@+id/btnCredit3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="64dp"
                        android:text="3"
                        android:textSize="32sp" />

                    <Button
                        android:id="@+id/btnCreditDot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="64dp"
                        android:text="."
                        android:textSize="32sp" />

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center" >

                    <Button
                        android:id="@+id/btnCredit0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="64dp"
                        android:text="0"
                        android:textSize="32sp" />

                    <Button
                        android:id="@+id/btnCreditEnter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_span="3"
                        android:minWidth="64dp"
                        android:text="@string/button_enter"
                        android:textSize="32sp" />

                </TableRow>
            </TableLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
