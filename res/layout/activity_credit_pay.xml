<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".CreditPayActivity" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtCvv2"
                android:gravity="right"
                android:text="@string/cvv2"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/spCardType"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/spCardType"
                android:layout_toLeftOf="@+id/spCardType"
                android:gravity="right|center_vertical"
                android:text="@string/card_type"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/spBank"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/spBank"
                android:layout_toLeftOf="@+id/spBank"
                android:gravity="right|center_vertical"
                android:text="@string/bank"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/layoutExpDate"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/layoutExpDate"
                android:layout_toLeftOf="@+id/layoutExpDate"
                android:gravity="right|center_vertical"
                android:text="@string/expire_date"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <LinearLayout
                android:id="@+id/layoutCardNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtCardPayAmount"
                android:layout_toRightOf="@+id/textView9" >

                <EditText
                    android:id="@+id/txtCardNoSeq1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="4"
                    android:inputType="number"
                    android:lines="1"
                    android:maxLength="4"
                    android:textSize="32sp" />

                <EditText
                    android:id="@+id/txtCardNoSeq2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="4"
                    android:inputType="number"
                    android:lines="1"
                    android:maxLength="4"
                    android:textSize="32sp" />

                <EditText
                    android:id="@+id/txtCardNoSeq3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="4"
                    android:inputType="number"
                    android:lines="1"
                    android:maxLength="4"
                    android:textSize="32sp" />

                <EditText
                    android:id="@+id/txtCardNoSeq4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="4"
                    android:inputType="number"
                    android:lines="1"
                    android:maxLength="4"
                    android:textSize="32sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/txtCvv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutCardNo"
                android:layout_toRightOf="@+id/textView9"
                android:ems="3"
                android:inputType="numberPassword"
                android:lines="1"
                android:maxLength="3"
                android:textSize="32sp" />

            <Spinner
                android:id="@+id/spCardType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtCvv2"
                android:layout_toRightOf="@+id/textView9" />

            <Spinner
                android:id="@+id/spBank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spCardType"
                android:layout_toRightOf="@+id/textView9" />

            <LinearLayout
                android:id="@+id/layoutExpDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spBank"
                android:layout_toRightOf="@+id/textView9"
                android:gravity="center_vertical" >

                <Spinner
                    android:id="@+id/spExpMonth"
                    android:layout_width="96dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="/"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <Spinner
                    android:id="@+id/spExpYear"
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtCardPayAmount"
                android:layout_alignBottom="@+id/txtCardPayAmount"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/textView4"
                android:gravity="right"
                android:text="@string/pay_amount"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txtCvv2"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/textView9"
                android:layout_alignTop="@+id/layoutCardNo"
                android:gravity="right|center_vertical"
                android:text="@string/credit_card_no"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/txtCardPayAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/layoutCardNo"
                android:layout_below="@+id/txtCardTotalPrice"
                android:ems="5"
                android:gravity="center_vertical"
                android:inputType="numberSigned|numberDecimal"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/black"
                android:textSize="32sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtCardTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txtCardPayAmount"
                android:layout_alignParentTop="true"
                android:ems="5"
                android:enabled="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/black"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtCardTotalPrice"
                android:layout_alignBottom="@+id/txtCardTotalPrice"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/textView3"
                android:gravity="right"
                android:text="@string/total_price"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </RelativeLayout>
</ScrollView>