<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/LeftLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvTotalPrice"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/background_card"
            android:gravity="right|center_vertical"
            android:padding="4dp"
            android:textAppearance="?android:attr/textAppearanceMediumInverse"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewMember"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:padding="4dp"
            android:text="Member"
            android:textAppearance="?android:attr/textAppearanceSmallInverse"
            android:textColor="@color/dark_gray"
            android:visibility="gone" />

        <ListView
            android:id="@+id/listViewOrder"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/background_card"
            android:choiceMode="multipleChoice" >
        </ListView>

        <RelativeLayout
            android:id="@+id/layoutOrderCtrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tvOrderSelected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="aaaaaaaaaaaaaaa" />

            <ImageButton
                android:id="@+id/btnDelOrder"
                style="@style/ButtonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="2dp"
                android:background="@drawable/red_button"
                android:minHeight="32dp"
                android:minWidth="48dp"
                android:src="@android:drawable/ic_menu_delete" />

            <ImageButton
                android:id="@+id/btnClearSelOrder"
                style="@style/ButtonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="2dp"
                android:layout_toLeftOf="@+id/btnDelOrder"
                android:background="@drawable/green_button"
                android:minHeight="32dp"
                android:minWidth="48dp"
                android:src="@android:drawable/ic_menu_revert" />

        </RelativeLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:background="@drawable/background_card"
            android:padding="4dp" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textViewProductPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/sub_total"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textViewSubTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="0.00"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textViewHoldTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/discount"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textViewDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="0.00"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </TableRow>

            <TableRow
                android:id="@+id/tbRowVat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/vat_exclude"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textViewVatExclude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="0.00"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_gray"
            android:padding="4dp" >

            <Button
                android:id="@+id/buttonDiscount"
                style="@style/ButtonTextWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_button"
                android:enabled="false"
                android:minWidth="100dp"
                android:onClick="discountClicked"
                android:text="@string/discount"
                android:textAppearance="?android:attr/textAppearanceMediumInverse" />

            <Button
                android:id="@+id/buttonCash"
                style="@style/ButtonTextWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/green_button"
                android:enabled="false"
                android:minWidth="100dp"
                android:onClick="paymentClicked"
                android:text="@string/cash"
                android:textAppearance="?android:attr/textAppearanceMediumInverse" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/RightLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >
	
	<com.astuetz.viewpager.extensions.PagerSlidingTabStrip
	    android:id="@+id/tabs"
	    android:layout_width="match_parent"
	    android:layout_height="48dip"
	    android:layout_marginBottom="4dp"
	    android:layout_marginLeft="8dp"
	    android:layout_marginRight="4dp"
	    android:background="@drawable/background_card"
	    android:padding="4dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/colors"
        android:layout_below="@+id/tabs"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:layout_weight="1"
        tools:context=".MainActivity" />
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_gray"
            android:padding="4dp" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/buttonHold"
                    style="@style/ButtonText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gray_button"
                    android:enabled="false"
                    android:minWidth="100dp"
                    android:onClick="holdOrderClicked"
                    android:text="@string/hold"
                    android:textAppearance="?android:attr/textAppearanceMediumInverse" />

                <Button
                    android:id="@+id/buttonSetMember"
                    style="@style/ButtonText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gray_button"
                    android:minWidth="100dp"
                    android:onClick="setMemberClicked"
                    android:text="@string/set_member"
                    android:textAppearance="?android:attr/textAppearanceMediumInverse"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/buttonNewMember"
                    style="@style/ButtonText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gray_button"
                    android:minWidth="100dp"
                    android:onClick="newMemberClicked"
                    android:text="@string/addnew_member"
                    android:textAppearance="?android:attr/textAppearanceMediumInverse"
                    android:visibility="gone" />

            </LinearLayout>

            <Button
                android:id="@+id/buttonClearBill"
                style="@style/ButtonTextWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/red_button"
                android:minWidth="100dp"
                android:onClick="clearBillClicked"
                android:text="@string/cancel_bill"
                android:textAppearance="?android:attr/textAppearanceMediumInverse" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>